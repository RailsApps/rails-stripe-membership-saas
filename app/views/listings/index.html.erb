<div class="page-header">
	<h1>Listings</h1>
</div>
<div class="row">
<% @listings.each_with_index do |listing, index| %>
    <div class="col-sm-6 col-md-2">
      <div class="thumbnail">
        <img src="<%= listing.image %>" alt="<%= listing.name %>">
        <div class="caption">
	        <p><%= listing.name[0..40] %>...</p>
	        <p><a href="#" class="btn btn-primary" role="button">Follow</a></p>
        </div>
      </div>
    </div>
<% end %>
</div>
<%= will_paginate @listings %>