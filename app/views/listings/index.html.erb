<div class="page-header">
	<h1>Listings</h1>
</div>
<div class="row">
<% @listings.each_with_index do |listing, index| %>
    <div class="col-sm-6 col-md-2">
      <div class="thumbnail">
        <img src="<%= listing.image %>" alt="<%= listing.name %>">
        <div class="caption">
	        <p><%= listing.name[0..40] %>...</p>
          <% if current_user.following?(listing) %>
          <%= link_to "Unfollow", unfollow_listing_path(listing), :class => "btn btn-success" %>
          <% else %>
          <%= link_to "Follow", follow_listing_path(listing), :class => "btn btn-primary" %>
          <% end %>
          </p>
        </div>
      </div>
    </div>
<% end %>
</div>
<%= will_paginate @listings %>